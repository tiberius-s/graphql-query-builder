{
  "name": "graphql-query-builder",
  "version": "1.0.0",
  "description": "A GraphQL utility package for building optimized upstream queries based on client field selections. Prevents server-side overfetching in Apollo Federation subgraphs.",
  "author": "Tiberius Silivestru <tiberius.silivestru@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:ci": "tsup && attw --pack . && publint",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run test/integration.test.ts",
    "test:integration:ci": "vitest run test/integration.test.ts",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src",
    "format": "biome check --write src",
    "format:check": "biome check src",
    "check": "biome check src",
    "check:fix": "biome check --write src",
    "typecheck": "tsc --noEmit",
    "validate": "npm run build && attw --pack . && publint",
    "prepublishOnly": "npm run validate"
  },
  "keywords": [
    "graphql",
    "apollo",
    "federation",
    "query-builder",
    "overfetching",
    "optimization",
    "datasource",
    "subgraph"
  ],
  "peerDependencies": {
    "graphql": "^16.0.0"
  },
  "dependencies": {
    "graphql-parse-resolve-info": "^4.14.1"
  },
  "devDependencies": {
    "@apollo/server": "^4.10.0",
    "@apollo/subgraph": "^2.6.0",
    "@arethetypeswrong/cli": "^0.18.1",
    "@biomejs/biome": "^2.3.11",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^1.2.0",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.12.6",
    "publint": "^0.3.11",
    "tsup": "^8.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
